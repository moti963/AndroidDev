<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    tools:context=".MainActivity">

    <!--<RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="@string/radio_male"
        android:padding="10dp"
        android:layout_margin="5dp"
        />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="@string/radio_female"
        android:padding="10dp"
        android:layout_margin="5dp"
        />-->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="@string/height_hint_txtf"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:inputType="numberDecimal"
        android:id="@+id/body_htf"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="@string/height_hint_txti"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:inputType="numberDecimal"
        android:id="@+id/body_hti"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="@string/weight_hint_txt"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:inputType="numberDecimal"
        android:id="@+id/body_wt"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/calc_btn_txt"
        android:id="@+id/calc_btn"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bmi_result"
        android:text="Result: "
        android:textSize="26sp"
        android:textStyle="bold"
        />

</LinearLayout>