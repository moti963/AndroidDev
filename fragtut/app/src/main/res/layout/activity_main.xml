    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frag_a"
            android:id="@+id/fragaBtn"
            android:layout_margin="2dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frag_b"
            android:id="@+id/fragbBtn"
            android:layout_margin="2dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frag_c"
            android:id="@+id/fragcBtn"
            android:layout_margin="2dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frag_d"
            android:id="@+id/fragdBtn"
            android:layout_margin="2dp"
            />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/container"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:minHeight="20dp"
        android:layout_marginBottom="10dp"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_layout"
            android:id="@+id/moveToTabLayout"
            android:onClick="moveToTabLayout"
            android:layout_margin="2dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bottom_nav"
            android:id="@+id/moveToBottomNav"
            android:onClick="moveToBottomNavigation"
            android:layout_margin="2dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_drawwer"
            android:id="@+id/moveToNavDrawwer"
            android:onClick="moveToNavDrawwer"
            android:layout_margin="2dp"
            />

    </LinearLayout>
</LinearLayout>